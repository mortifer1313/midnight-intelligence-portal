# MIDNIGHT Cyber Security Division - Hostinger VPS Production Environment
# UNRESTRICTED CONFIGURATION FOR MAXIMUM CAPABILITIES

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Security & Performance
NEXT_TELEMETRY_DISABLED=1
NEXT_SHARP=1
NODE_OPTIONS="--max-old-space-size=2048"

# Docker Configuration
PORT=3000
HOSTNAME=0.0.0.0

# Bot Configuration - UNRESTRICTED MODE
BOT_MODE=unrestricted
BOT_RESTRICTIONS=disabled
AI_SAFETY_FILTERS=disabled
CONTENT_FILTERING=disabled

# Advanced Features
ENABLE_ADVANCED_FEATURES=true
ENABLE_UNLIMITED_REQUESTS=true
BYPASS_RATE_LIMITS=true
ENABLE_DEEP_ANALYSIS=true

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
SESSION_SECRET=midnight_cyber_security_division_unrestricted

# Database Configuration (if needed)
DATABASE_URL=
ENABLE_DATABASE_LOGGING=false

# API Configuration
API_TIMEOUT=300000
MAX_REQUEST_SIZE=50mb
ENABLE_CORS=true

# Advanced Security (Paradoxically for unrestricted access)
BYPASS_SECURITY_CHECKS=true
ENABLE_ADMIN_ACCESS=true
DISABLE_CONTENT_MODERATION=true
